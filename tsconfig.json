{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "types": ["node"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
    },
    "ts-node": {
        "transpileOnly": true,
        "esm": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
